<div id="student_image">
	<% if @student.avatar.present?%>
	<div> Photo: <%= image_tag @student.avatar %></div>
	<% end %>
	<h1>Student <%=@student.id%> detail</h1>
	<div>Name: <%= @student.name %></div>
	<div>Gender: <%= @student.gender %></div>
	<div>Date of Birth: <%= @student.dob %></div>
	<div>City: <%= @student.city %></div>
	<div>Language: <%= @student.language %></div>
	<div><%= link_to "Delete", students_path, method: :delete%></div>


<%= link_to "Edit Student", edit_student_path, class: "btn btn-primary",data: { bs_target: "#EditStudentForm", bs_toggle: "modal", remote: true } %>
<!-- Modal -->
<div class="modal fade" id="EditStudentForm" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="EditStudentFormLabel">Edit Student Form</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    	<div id="EditStudentForm"> 

      </div>
    </div>
  </div>
</div>
</div>

<script>
function uploadimage(){
    var formData = new FormData();
        var url = $('#update_form').attr("action");
        var fileimage = $('#avatar')[0].files;
        formData.append("avatar", fileimage[0]);
         $.ajax({
            type: "PATCH",
            url: url,
            data: formData,
            processData: false,
            contentType: false,
        });
     }

</script>